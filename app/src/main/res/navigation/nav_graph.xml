<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_profile">
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.filfur.softwaredesign.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/edit_action"
            app:destination="@id/navigation_profile_edit" />
    </fragment>
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.filfur.softwaredesign.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_about"
        android:name="com.filfur.softwaredesign.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.filfur.softwaredesign.NotificationFragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/navigation_profile_edit"
        android:name="com.filfur.softwaredesign.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit" />
</navigation>